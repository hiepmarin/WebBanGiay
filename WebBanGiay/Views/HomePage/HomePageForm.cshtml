@model IEnumerable<WebBanGiay.Models.product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomePageForm</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
</head>
<body>
    <div style="padding-left: 10%; padding-right: 10%; max-width: 100%">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style=" max-width: 100%; padding-bottom: 30px">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active" data-interval="4000">
                    <img src="/Content/img/HomeSlide_1.jpg" class="" alt="..." style="width:100%; height:50%">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="/Content/img/HomeSlide_2.jpg" class="" alt="..." style="width:100%; height:auto">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="/Content/img/HomeSlide_3.jpg" class="" alt="..." style="width:100%; height:auto">
                </div>
                <div class="carousel-item" data-interval="4000">
                    <img src="/Content/img/HomeSlide_4.jpg" class="" alt="..." style="width:100%; height:auto">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3" style="padding-top:10px">
                    @Html.HiddenFor(model => item.shoe_id)
                    <div class="card">

                        <a href="/Products/ShoesDetail?shoe_id=@Html.DisplayFor(model => item.shoe_id) ">
                            <img src="@item.image" class="card-img-top" alt="...">
                        </a>
                        <div class="card-img-overlay" style=" max-height:100px">
                            <p style="text-align:left; position:absolute">@item.sex</p>
                            <p style="text-align:right">@item.category_name</p>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title" style="font-size:medium">@item.name</h5>
                            @*@if (Convert.ToInt32(item.minPrice.ToString()) == 0)
                            {
                                <p class="card-text">@item.maxPrice vnđ</p>
                            }
                            else
                            {
                                <p class="card-text">@item.minPrice vnđ - @item.maxPrice vnđ</p>
                            }*@
                            <p class="card-text">@item.price đ</p>
                            <p class="card-text">@item.detail</p>
                            <a href="/Products/ShoesDetail?shoe_id=@item.shoe_id" class="btn btn-primary">
                                Xem
                            </a>
                            @*<a href="/Products/Detail?id=@item.shoe_id" class="btn btn-primary">
                                Xem
                            </a>*@

                        </div>
                    </div>

                </div>
            }
        </div>
    </div>

    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@


</body>
</html>
