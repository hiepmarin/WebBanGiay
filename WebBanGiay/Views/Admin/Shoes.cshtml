@model IEnumerable<WebBanGiay.Models.shoes_info_table>

@{
    ViewBag.Title = "Shoes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="title" style="position: center; text-align: center; padding-top: 10px;">Shoes management </h2>

<div style="position:center; text-align:center">
    <a class="btn btn-outline-info" href="/Admin/AddShoes" >
        Add new Shoes
    </a>
</div>

<div class="container" style="padding-top:10px">
    <table class="table" border="1">
        <tr>
            <th>
                id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.detail)
            </th>
            <th>
                date
            </th>
            <th>action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.shoe_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sexName)
                </td>
                <td>
                    <img src="@Html.DisplayFor(modelItem => item.image)" alt="" width="95" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.categoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.detail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
                <td>
                    <a class="btn btn-info" href="/Admin/Details?shoe_id=@item.shoe_id">Details</a> |
                    <a class="btn btn-warning" href="/Admin/EditShoe_info?shoe_id=@item.shoe_id">Edit</a> |
                    <a class="btn btn-danger" href="/Admin/DeleteShoe_info?shoe_id=@item.shoe_id">Delete</a>
                    @*@Html.ActionLink("Details", "Details", new { shoe_id = item.shoe_id }) |*@
                    @*@Html.ActionLink("Edit", "EditShoe_info", new { shoe_id = item.shoe_id }) |
        @Html.ActionLink("Delete", "DeleteShoe_info", new { shoe_id = item.shoe_id })*@
                </td>
            </tr>
        }

    </table>
</div>
