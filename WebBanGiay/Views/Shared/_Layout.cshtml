<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="padding-top:0">
    <style>
        .dropdown:hover> .dropdown-menu {
            display: block;
        }
    </style>
    <div class="">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a href="/HomePage/HomePageForm">
                <img src="https://www.adidas.com.vn/glass/react/3c18e3a/assets/img/icon-adidas-logo.svg" alt="" width="80" style="padding-right:20px" />
            </a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List?sex=1" tabindex="-1" aria-disabled="true" style="font-size:larger">Nam</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List?sex=2" tabindex="-1" aria-disabled="true" style="font-size:larger">Nữ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Products/List?sex=3" tabindex="-1" aria-disabled="true" style="font-size:larger">Trẻ em</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a style="font-size:larger" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Category
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            @if (ViewBag.listCategory != null)
                            {
                                foreach (var item in ViewBag.listCategory)
                                {
                                    <a class="dropdown-item" href="/Products/Shoes?category_id=@item.category_idd">@item.category_namee</a>
                                    <div class="dropdown-divider"></div>
                                }
                            }

                            <a class="dropdown-item" href="/Products/Shoes?category_id=0">Khác</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="font-size:larger" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            All
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/Products/All?product=new">Mới</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/Products/All?product=sold">Mua nhiều</a>
                        </div>
                    </li> 
                    <li class="nav-item">
                        <a class="nav-link" href="#" tabindex="-1" aria-disabled="true" style="font-size:larger">Liên hệ</a>
                    </li>
                </ul>
                <div>
                    @*<form class="form-inline my-2 my-lg-0">
                        <div class="input-box">
                            <i></i>
                            <input type="text" placeholder="Nhập nội dung muốn tìm " id="search" name="search">
                        </div>
                        <a href="/HomePage/Search?name=Giay" type="submit">
                            <img src="/Content/img/search.png" alt="" style="width:40px; padding-left:10px"/>
                        </a>

                    </form>*@
                </div>
                <div style="padding-left:10px">
                    @Html.Partial("GioHangPartial")
                </div>
                <div style="padding-left:10px">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    </div>

    <div>
        @RenderBody()
